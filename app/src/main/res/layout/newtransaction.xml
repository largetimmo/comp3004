<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TabHost
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--whole tab-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--tab text-->
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--tab content-->
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--expense-->
                <LinearLayout
                    android:id="@+id/expense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <!--enternumber-->
                    <EditText
                        android:id="@+id/expenseAmount"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="0.02"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="false"
                        android:singleLine="true"
                        android:text="0.00"
                        android:textAlignment="textEnd"
                        android:textColor="#AAA"
                        android:textSize="50sp" />

                    <!--translist-->
                    <Spinner
                        android:id="@+id/expenseTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="0.02" />

                    <!--accountlist-->
                    <Spinner
                        android:id="@+id/expenseAccountSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="0.02" />

                    <!-- add income note box-->

                    <EditText
                        android:id="@+id/expenseNotes"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:text="expense notes" />

                    <!--addexpense-->
                    <Button
                        android:id="@+id/addExpenseButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="ADD EXPENSE" />

                </LinearLayout>


                <!--income-->
                <LinearLayout
                    android:id="@+id/income"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <!--enternumber-->
                    <EditText
                        android:id="@+id/incomeAmount"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="0.02"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="false"
                        android:singleLine="true"
                        android:text="0.00"
                        android:textAlignment="textEnd"
                        android:textColor="#AAA"
                        android:textSize="50sp" />

                    <!--transtype-->
                    <Spinner
                        android:id="@+id/incomeTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="0.02" />

                    <!--accounttype-->
                    <Spinner
                        android:id="@+id/incomeAccountSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="0.02" />

                    <!-- add income note box-->

                    <EditText
                        android:id="@+id/incomeNotes"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:text="income notes" />

                    <!--addincome-->
                    <Button
                        android:id="@+id/addIncomeButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="ADD INCOME" />

                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>