<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="376dp"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="52dp"
        android:text="Hi, Smart Account"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_title2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/orange"
        android:text="Smart Account"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="438dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="153dp"
            android:ems="10"
            android:inputType="text"
            android:text="Account Setting                    "
            android:textColor="#000000"
            android:textSize="32sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/purchasemanager"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="text"
            android:text="Manager Purchase Type          "
            android:textColor="#000000"
            android:textSize="32sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perpayment" />

        <View
            android:id="@+id/view2"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/accountmanager"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="text"
            android:text="Manager Account           "
            android:textColor="#000000"
            android:textSize="32sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purchasemanager" />

        <View
            android:id="@+id/view3"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/perpayment"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="text"
            android:text="Per-Auth Payment                 "
            android:textColor="#000000"
            android:textSize="32sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setting" />

        <View
            android:id="@+id/view4"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="46dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>