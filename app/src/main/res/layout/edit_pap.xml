<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/orange"
            android:text="Edit Pre-authorized Payment"
            android:textAlignment="center"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="180dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/amount"
        android:layout_width="395dp"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Spinner
        android:id="@+id/purchaseTypeSpinner"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount" />

    <Spinner
        android:id="@+id/accountSpinner"
        android:layout_width="395dp"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchaseTypeSpinner" />

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountSpinner"
        android:layout_marginStart="16dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Date"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="-112dp"
            android:layout_weight="0.01" />

        <Spinner
            android:id="@+id/PAPyearSpinner"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:layout_weight="0.04" />

        <Spinner
            android:id="@+id/PAPmonthSpinner"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_weight="0.02" />

        <Spinner
            android:id="@+id/PAPdaySpinner"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_weight="0.01" />
    </LinearLayout>

    <EditText
        android:id="@+id/PAPnotes"
        android:layout_width="395dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="110dp"
        android:layout_weight="0.27"
        android:ems="10"
        android:gravity="start"
        android:hint="Notes"
        android:inputType="textMultiLine"
        android:maxLength="200"
        android:textAlignment="textStart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="8dp"
        android:background="@color/orange"
        android:text="SAVE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PAPnotes" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/orange"
        android:text="DELETE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PAPnotes" />

    <Spinner
        android:id="@+id/period"
        android:layout_width="128dp"
        android:layout_height="54dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="84dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="276dp"
        android:text="Pre-authorized Period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="292dp"
        android:text="Month(s)"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>